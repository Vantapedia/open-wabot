{
  "name": "open-wabot",
  "version": "1.0.0",
  "description": "Simple whatsapp bot",
  "main": "index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "test": "node test.js",
    "start": "node controller.js",
    "clear:session": "node src/session.js",
    "install:jimp": "npm i jimp --save-optional",
    "install:mongo": "npm i baileys-mongodb --save-optional",
    "install:sharp": "npm i sharp --save-optional",
    "uninstall:jimp": "npm un jimp --no-save",
    "uninstall:mongo": "npm un baileys-mongodb --no-save",
    "uninstall:sharp": "npm un sharp --no-save"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ismananda/open-wabot.git"
  },
  "keywords": [
    "whatsapp-bot",
    "wabot",
    "baileys",
    "bot-baileys"
  ],
  "author": "Ismananda",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/Ismananda/open-wabot/issues"
  },
  "homepage": "https://github.com/Ismananda/open-wabot#readme",
  "dependencies": {
    "axios": "^1.7.3",
    "baileys": "^6.7.5",
    "file-type": "^19.4.0",
    "pino-pretty": "^11.2.2",
    "qrcode-terminal": "^0.12.0",
    "syntax-error": "^1.4.0"
  },
  "optionalDependencies": {
    "baileys-mongodb": "^1.0.3",
    "jimp": "^0.16.13",
    "sharp": "^0.32.6"
  }
}
